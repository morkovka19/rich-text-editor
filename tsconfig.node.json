{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@styles/*": ["./src/styles/*"],
            "@components/*": ["./src/components/*"],
            "@icons/*": ["./src/icons/"]
        }
    },
    "include": ["vite.config.ts", "src/custom.d.ts"]
}
